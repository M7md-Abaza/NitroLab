            android:name="com.nitrolab.physics.Extras.SupportUs"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name="com.nitrolab.physics.Activities.MainActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.nitrolab.physics.Activities.Splash"
            tools:ignore="InnerclassSeparator">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>